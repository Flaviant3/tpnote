{% extends 'base.html.twig' %}

{% block title %}Recherche{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Recherche</h1>

        <form action="{{ path('recherche') }}" method="get">
            <label for="query">Rechercher : </label>
            <input type="text" id="query" name="q" required>
            <button type="submit">Rechercher</button>
        </form>

        {% if chaines is not empty %}
            <h2>RÃ©sultats de la recherche :</h2>
            <ul>
                {% for chaine in chaines %}
                    <li><a href="{{ path('chaine_show', {'id': chaine.id}) }}">{{ chaine.libelle }}</a></li>
                {% endfor %}
            </ul>
        {% endif %}
    </div>
{% endblock %}
